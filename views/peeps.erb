<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="/style-sheet.css">
</head>
<body>

<h1>Peeps</h1>
<br>
<% if @current_user == "a Guest"%>
  <a href="/sign_up">Sign Up</a>
  <a href="/login">Login</a>
  <br>
  <h3>You are a Guest</h3>
<% else %>
  <a href="/logout">Logout</a>
  <br>
  <h3>You are signed in as <%= @current_user %>
  <br>
  <a href="/add_peep">Add Peep</a>
  </h3>
<% end %>
<br>

<div class="peeps_div">
<ul class="peeps_list">
<% @peeps.reverse.each do |peep| %>
  <li style="list-style-type:none;" class="peep" id="peep-<%= peep.id %>">
    <p><%=peep.body%></p>
    <p class="timestamp"><%=peep.time%></p>
    <p class="username">posted by: <%=peep.username%></p>

  </li>
<% end %>
</ul>
</div>

</body>
</html>
